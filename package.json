{
  "name": "svelte-electron-template",
  "version": "0.1.0",
  "description": "A template for building Electron apps with SvelteJS",
  "author": "Valmisson Grizorte - <missongrizorte@gmail.com>",
  "license": "MIT",
  "main": "src/electron/index.js",
  "scripts": {
    "build": "rollup -c",
    "autobuild": "rollup -c -w",
    "dev": "run-p start:dev autobuild start:electron",
    "start:dev": "sirv public --single --dev",
    "start:electron": "electron . --dev",
    "postinstall": "electron-builder install-app-deps",
    "postuninstall": "electron-builder install-app-deps",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**": [
      "eslint --fix",
      "stylelint --fix"
    ]
  },
  "dependencies": {},
  "devDependencies": {
    "@rollup/plugin-alias": "^3.1.2",
    "@rollup/plugin-commonjs": "^19.0.0",
    "@rollup/plugin-node-resolve": "^13.0.0",
    "autoprefixer": "^10.3.1",
    "chokidar": "^3.5.2",
    "electron": "^13.1.6",
    "electron-builder": "^22.11.7",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.3.5",
    "postcss-import": "14.0.2",
    "postcss-load-config": "^3.1.0",
    "postcss-preset-env": "^6.7.0",
    "rollup": "^2.53.0",
    "rollup-plugin-css-only": "^3.1.0",
    "rollup-plugin-livereload": "^2.0.5",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-postcss": "^4.0.0",
    "rollup-plugin-svelte": "^7.1.0",
    "rollup-plugin-terser": "^7.0.2",
    "sirv-cli": "^1.0.12",
    "svelte": "^3.38.3",
    "svelte-preprocess": "^4.7.4",
    "tailwindcss": "^2.2.4"
  },
  "build": {
    "appId": "gbpm-automation-tool-v2",
    "win": {
      "target": [
        "nsis"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "extraFiles": [
      "reports",
      "inputData",
      "outputData",
      "Templates",
      "pw-browsers",
      "scriptSource",
      "docs",
      "logs.json"
    ]
  }
}
