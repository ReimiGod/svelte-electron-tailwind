{
  "name": "svelte-electron-template",
  "version": "0.1.0",
  "description": "A template for building Electron apps with SvelteJS",
  "author": "Valmisson Grizorte - <missongrizorte@gmail.com>",
  "license": "MIT",
  "main": "src/main.js",
  "scripts": {
    "build": "rollup -c",
    "autobuild": "rollup -c -w",
    "dev": "run-p start:dev autobuild start:electron",
    "start:dev": "sirv public --single --dev",
    "start:electron": "electron .",
    "postinstall": "electron-builder install-app-deps",
    "postuninstall": "electron-builder install-app-deps",
    "jslint": "eslint src/**",
    "csslint": "stylelint src/**"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**": [
      "eslint --fix",
      "stylelint --fix"
    ]
  },
  "dependencies": {},
  "devDependencies": {
    "chokidar": "^3.3.0",
    "electron": "^9.3.1",
    "electron-builder": "^22.1.0",
    "eslint": "^7.4.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "eslint-plugin-svelte3": "^2.7.3",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.11",
    "npm-run-all": "^4.1.5",
    "postcss-import": "^12.0.1",
    "postcss-preset-env": "^6.7.0",
    "rollup": "^2.21.0",
    "rollup-plugin-alias": "^2.2.0",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-livereload": "^1.0.4",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-postcss": "^3.1.2",
    "rollup-plugin-svelte": "^5.1.0",
    "rollup-plugin-terser": "^6.1.0",
    "sirv-cli": "^1.0.3",
    "stylelint": "^13.6.1",
    "stylelint-config-standard": "^20.0.0",
    "svelte": "^3.12.1"
  }
}
