{
  "name": "svelte-electron-template",
  "version": "0.1.0",
  "description": "A template for building Electron apps with SvelteJS",
  "author": "Valmisson Grizorte - <missongrizorte@gmail.com>",
  "license": "MIT",
  "main": "src/main.js",
  "scripts": {
    "build": "rollup -c",
    "autobuild": "rollup -c -w",
    "dev": "run-p start:dev autobuild start:electron",
    "start:dev": "sirv public --single --dev",
    "start:electron": "electron .",
    "postinstall": "electron-builder install-app-deps",
    "postuninstall": "electron-builder install-app-deps",
    "jslint": "eslint src/**",
    "csslint": "stylelint src/**"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**": [
      "eslint --fix",
      "stylelint --fix"
    ]
  },
  "dependencies": {},
  "devDependencies": {
    "chokidar": "^3.5.1",
    "electron": "^11.2.1",
    "electron-builder": "^22.9.1",
    "eslint": "^7.19.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^5.0.0",
    "eslint-plugin-svelte3": "^3.0.0",
    "husky": "^4.3.8",
    "lint-staged": "^10.5.3",
    "npm-run-all": "^4.1.5",
    "postcss-import": "12.0.1",
    "postcss-preset-env": "^6.7.0",
    "rollup": "^2.38.2",
    "rollup-plugin-alias": "^2.2.0",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-livereload": "^2.0.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-postcss": "^4.0.0",
    "rollup-plugin-svelte": "^7.1.0",
    "rollup-plugin-terser": "^7.0.2",
    "sirv-cli": "^1.0.11",
    "stylelint": "^13.9.0",
    "stylelint-config-standard": "^20.0.0",
    "svelte": "^3.32.1"
  }
}
