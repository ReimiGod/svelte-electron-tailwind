{
  "extends": "stylelint-config-standard",
  "rules": {
    "selector-pseudo-class-no-unknown": [
      true,
      {
        "ignorePseudoClasses": [
          "global"
        ]
      }
    ]
  },
  "ignoreFiles": [
    "**/*.js",
    "**/*.woff[2]",
    "**/*.woff2",
    "**/*.woff",
    "**/*.eot",
    "**/*.svg",
    "**/*.ttf"
  ]
}
